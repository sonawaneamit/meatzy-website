# Shopify Storefront API
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
NEXT_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your-storefront-access-token

# Shopify Customer Account API (Headless)
# Get these from: Shopify Admin > Settings > Customer accounts > Application setup
NEXT_PUBLIC_SHOPIFY_CUSTOMER_ACCOUNT_CLIENT_ID=shp_xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
NEXT_PUBLIC_SHOPIFY_CUSTOMER_ACCOUNT_API_URL=https://shopify.com/XXXXXXX/auth

# Application URLs (update these after deploying to Vercel)
NEXT_PUBLIC_APP_URL=http://localhost:3000
